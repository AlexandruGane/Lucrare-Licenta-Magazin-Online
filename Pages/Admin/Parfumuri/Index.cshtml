@page
@model GaneShop.Pages.Admin.Parfumuri.IndexModel
@{
}

<h2 class="my-3">Lista de parfumuri</h2>


<div class="row mb-3">
    <div class="col">
        <a class='btn btn-primary'  href='/Admin/Parfumuri/Create'>Parfum nou</a>
    </div>
    <div class ="col">
        <form class="d-flex">
        <input class="form-control me-2" type="search" name="search" value="@Model.search" placeholder="Cauta dupa brand sau dupa categorie">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
</div>



<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Cod_parfum</th>
            <th>Pret</th>
            <th>Descriere</th>
            <th>categorie</th>
            <th>imagine</th>
            <th>created_at</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listParfumuri)
        {

            <tr>
                <td>@item.ID</td>
                <td>@item.Title</td>
                <td>@item.Cod_Parfum</td>
                <td>@(item.Pret)€</td>
                <td>@item.Descriere</td>
                <td>@item.categorie</td>
                <td><img src ="~/images/Parfumuri/@item.imagine" width="100"></td>
                <td>@item.created_at</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" href="Admin/Parfumuri/Edit?id=@item.ID">Edit</a>
                    <a class="btn btn-danger btn-sm" href="Admin/Parfumuri/Delete?id=@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav >
  <ul class="pagination">
        @for(int i=1; i <= Model.totalPages; i++)
        {
            <li class="page-item"><a class="page-link" href="?page=@(i)&search=@(Model.search)">@i</a></li>
        }
    </ul>
</nav>











